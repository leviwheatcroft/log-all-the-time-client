tpl-shadow-box.entry-input
  // =========================================== top buttons (cancel, delete) ==
  div(
    v-if="deletable || cancelable"
    class="flex flex-row justify-end -mt-4 -mr-4"
  )
    entry-input-delete(
      v-if="deletable"
      :entry="entry"
    )
    tpl-button(
      extraClasses="bare"
      v-if="cancelable"
      @click="clickCancel"
    )
      icon(
        name="x"
      )
  div(
    class="flex flex-row gap-4 flex-wrap"
  )
    entry-input-description(
      ref="description"
      :description="description"
      @input="description = $event"
      :inputTabindex="tabindex + 1"
    )
    entry-input-projects(
      ref="projects"
      extraClasses="w-full lg:w-1/3 flex-grow"
      :items="project"
      @updateItems="project = $event"
      :inputTabindex="tabindex + 2"
    )
    selector-tags(
      extraClasses="w-full lg:w-1/3"
      :allowNewItem="true"
      :isMultiItem="true"
      :items="tags"
      @updateItems="tags = $event"
      :inputTabindex="tabindex + 3"
    )
    entry-input-users(
      v-if="allowSetUser"
      extraClasses="w-full lg:w-1/3"
      :items="user"
      @updateItems="user = $event"
      :inputTabindex="tabindex + 3"
    )
    entry-input-date(
      extraClasses="w-full lg:w-40"
      :inputTabindex="tabindex + 4"
      :date="date"
      @input="date = $event"
    )
    entry-input-duration(
      ref="duration"
      extraClasses="w-32"
      :tabindex="tabindex + 5"
      :duration="duration"
      @change="duration = $event"
    )
    div(
      class="flex flex-row flex-grow"
    )
      .flex-grow
      entry-input-save(
        :id="id"
        :date="date"
        :description="description"
        :project="project"
        :duration="duration"
        :tags="tags"
        :validate="validate"
        :isNewEntry="isNewEntry"
        :tabindex="tabindex + 6"
        :reset="reset"
        :createdAt="createdAt"
        :user="user"
        @submit="$emit('submit')"
      )
