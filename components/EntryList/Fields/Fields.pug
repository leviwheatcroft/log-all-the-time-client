.fields(
  class="flex flex-row justify-end my-4 mx-2"
)
  .icon-container(
    :class="fieldsToggle.date ? 'active' : ''"
    v-if="fieldsToggleBoundaries.date === null"
    @click="clickField('date')"
  )
    icon(
      class="w-4 h-4 -t-2"
      name="calendar"
    )
  .icon-container(
    :class="fieldsToggle.duration ? 'active' : ''"
