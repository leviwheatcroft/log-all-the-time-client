.meta-projects(
  class="w-2/4 mx-auto"
)
  tpl-label-bar
    template(
      v-slot:label
    ) Projects
  .search(
    class="flex flex-row gap-4 mt-4 justify-center"
  )
    tpl-faux-input
      icon(
        name="folder"
      )
      input(
        name="project-partial"
        v-model="projectPartial"
        placeholder="project"
      )
  div(
    class="mx-auto"
  )
    .headings(
      class="flex flex-row gap-4 mt-4 justify-between"
    )
      span
        | Project Name
      span
        | Archived
    .project(
      class="flex flex-row gap-4 mt-4 justify-between items-center"
      v-for="project in projects"
    )
      | {{ project.name }}
      .spacer(
        class="flex-grow h-px mx-10 min-w-4 bg-gray-300"
      )
      tpl-button(
        extraClasses="bare"
        @click="toggleArchived(project)"
      )
        icon(
          :name="project.archived ? 'toggle-right' : 'toggle-left'"
        )
      
