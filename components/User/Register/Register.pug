div(
  class="flex flex-col justify-center items-center"
)
  tpl-shadow-box
    h1 Register
    .row(
      class="flex flex-row gap-4 mt-8"
    )
      tpl-faux-input-label(
        extraClasses="w-60"
      )
        label(
          for="email"
        ) Email :
      tpl-faux-input
        icon(
          name="at-sign"
        )
        input(
          name="email"
          v-model="email"
          placeholder="mcboatface@gmail.com"
        )
    .row(
      class="flex flex-row gap-4 mt-4"
    )
      tpl-faux-input-label(
        extraClasses="w-60"
      )
        label(
          for="name"
        ) Username :
      tpl-faux-input
        icon(
          name="user"
        )
        input(
          name="name"
          v-model="name"
          placeholder="mcboaty"
        )
    .row(
      class="flex flex-row gap-4 mt-4"
    )
      tpl-faux-input-label(
        extraClasses="w-60"
      )
        label(
          for="password"
        ) Password :
      tpl-faux-input
        icon(
          name="key"
        )
        input(
          name="password"
          type="password"
          v-model="password"
          placeholder="password"
        )
    .row(
      class="flex flex-row gap-4 mt-4"
    )
      tpl-faux-input-label(
        extraClasses="w-60"
      )
        label(
          for="password-confirmation"
        ) Password Confirmation :
      tpl-faux-input
        icon(
          name="key"
        )
        input(
          name="password-confirmation"
          type="password"
          v-model="passwordConfirmation"
          placeholder="password"
          v-on:keyup.enter="register"
        )
    .row(
      class="flex flex-row gap-4 mt-4"
    )
      tpl-button.bare
        nuxt-link(
          to="/login"
        )
          icon(
            name="log-in"
          )
          span Log In
      .spacer(
        class="flex-grow"
      )
      tpl-button(
        @click.native="register"
      )
        icon(
          name="user-plus"
        )
        span Register
