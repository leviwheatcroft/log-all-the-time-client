.entry-list
  fields(
    :fieldsToggle="fieldsToggle"
    :fieldsToggleBoundaries="fieldsToggleBoundaries"
  )
  .no-entries(
    v-if="!entries.length"
  )
    | No Entries
    .icon-container
      icon-meh
  entry-list-item(
    v-if="!entry.deleted"
    v-for="(entry, idx) in entries"
    :key="entry.id"
    :entry="entry"
    :clickTagHandler="clickTagHandler"
    :clickDateHandler="clickDateHandler"
    :clickUserHandler="clickUserHandler"
    :fieldsToggle="fieldsToggle"
    :idx="idx + 1"
  )
  .loading(
    v-if="loading"
  )
    | Loading more entries ...
    .icon-container.spin
      icon-loader
