.entry-tag-input
  .input-container
    input(
      v-model="tagPartial"
      @focus="hasFocus = true"
      @blur="hasFocus = false"
    )
    .suggestions(v-if="tagPartial.length > 0")
      // suggestions from partial
      .suggestion(
        v-if="tagPartial.length >= 3"
        v-for="suggestion in suggestions"
        :key="suggestion.id"
        @click="clickSuggestion(suggestion.tag)"
      ) {{ suggestion.tagName }}

      // new tag
      .suggestion(
        @click='clickAddSuggestion'
        v-if="tagPartial.length > 0"
      ) New Tag: {{ tagPartial }}
  .tag-container
    .tag(
      v-for="tagName in tagNames"
      :tagName='tagName'
      :key='tagName'
      @click="$emit('tagRemoved', tagName)"
    ) {{ tagName }}
